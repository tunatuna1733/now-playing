{
    "productName": "now-playing",
    "version": "0.0.0",
    "identifier": "com.tauri.dev",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "now-playing",
                "width": 300,
                "height": 300,
                "additionalBrowserArgs": "--disable-features=ElasticOverscroll",
                "decorations": false,
                "shadow": true,
                "resizable": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}